body {
	padding: 0;
	font: 12px/1.5 tahoma, arial, 'Hiragino Sans GB', '\5b8b\4f53',
		sans-serif;
	background: #f4f4f4;
	min-width: 320px;
	max-width: 700px;
	margin: 0 auto;
}

header {
	height: 45px;
	background-image: url("../img/bg_title.png");
	/* background-color:#3CB371; */
	/* -webkit-border-radius: 5px; */
}

a {
	text-decoration: none;
	cursor: pointer;
}

.star,.content,.bottom {
	border: 1px solid #F1EDED;
	border-left-color: #EEEBEB;
	border-right-color: #EEEBEB;
	border-bottom-color: #ECE2E2;
	margin: 15px;
	background-color: white;
	height: 35px;
	border-radius: 5px;
}

.star div {
	height: 35px;
}

.star div:nth-child(1) {
	margin: 0 5px;
	line-height: 35px;
	float: left;
}

.star div:last-child {
	margin-top: 2px;
}

button {
	background-color: rgb(10, 190, 146);
	border: 0;
	color: white;
	font-size: 17px;
	width: 100%;
	height: 100%;
	border-radius: 5px;
}

.content {
	height: 200px;
}

textarea {
	border-radius: 5px;
	border: 0;
	height: 98%;
	width: 98%;
}

.bottom {
	margin-top: 20px;
	background-color: #f4f4f4;
	border: 0;
}

.loading {
	position: absolute;
	top: 45%;
	left: 45%;
}