/****** 下拉刷新、上拉加载更多的样式********/
body{
    	padding: 0;
    	font:12px/1.5 tahoma,arial,'Hiragino Sans GB','\5b8b\4f53',sans-serif;
    	background: white;
    	min-width:320px;
    	max-width: 700px;
    	margin: 0 auto;
    }

dt {
	border-bottom: 1px solid #ccc;
	margin-left: 0px;
	max-width: 700px;
}

dt .imgDiv img {
	margin: 5px;
	-webkit-border-radius: 5px;
   	-moz-border-radius: 5px;
   	-o-border-radius: 5px;
   	border-radius: 5px;
	/* box-shadow:2px 2px 2px grey; */	
}

dt .lineDiv {
	width: 100%;
}

dt .imgDiv {
	float: left;
	height: 72px;
}

dt .contentDiv {
	height: 72px;
	margin-right: 8px;
}

a{
  	text-decoration: none;
  	cursor: pointer;
  }

.quotation span,.sign{
	display:block;
	float: left;
}

.quotation span{
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
	width: 60%;
}

.sign{
	color:black;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
	width: 30%;
}

.sign span{
	font-size: 17px;
	color:red;
}

dt h4 {
	float: left;
	margin: 0px;
	display:block;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
	width: 50%;
	font-size: 15px;
}

dt span {
	color: #999;
}

dt .titleDiv img {
	margin: 0;
}

dt .titleDiv {
	padding-top: 5px;
	height: 22px;
}

dt .quotation {
	height: 18px;
}

dt .infoDiv {
	color: black;
	height: 22px;
}

.titleDiv span {
	float: right;
	overflow: hidden;
}

.quotation img {
	margin-top: 3px;
	float: right;
}

.phoneSpan {
	text-decoration:none;
	float: right;
	width: 100px;
	height: 22px;
	background-image: url("../img/phone.png");
	background-repeat: no-repeat;
	background-size: 100px 22px;
}

.phoneSpan span {
	margin: 2px; display : block;
	text-align: right;
	color: white;
	display: block;
}

header {
	max-width:700px;
	position:fixed;
	width:100%;
	min-height: 45px;
	background-image: url("../img/bg_title.png");
}

header a {
	float: left;
}

header h3 {
	margin: 0 auto;
	padding-top: 8px;
	font-size: 20px;
	color: white;
	width: 100px;
	text-align: center;
}

#dataArea{
	margin-top:0px;
	padding-top: 50px;
}

 .more{
 	display:none;
   	background-color: rgb(10,190,146);
   	height: 35px;
   	font-size:16px;
   	line-height: 35px;
   	width: 70%;
   	margin: 10px 15% ;
   	margin-bottom: 15px;
   	cursor: pointer;
   	-webkit-border-radius: 5px;
   	-moz-border-radius: 5px;
   	-o-border-radius: 5px;
   	border-radius: 5px;
   }
   
  .more a{
   	display:block;
   	width: 100px;
   	color: white;
   	margin: 0 auto;
   }
   .loadingMore{
    	width: 50px;
    	margin: 0 auto;
    	display: none;
    }
    
     .bg{
    	 z-index:2;
    	/* display: none; */
    	position: absolute; 
    	top:0;
    	left: 0;
    	bottom: 0;
    	right: 0;
    	background-color: #ccc;
   	 	filter:alpha(opacity=40);  
      	-moz-opacity:0.4;  
      	-khtml-opacity: 0.4;  
      	opacity: 0.4;  
      	max-width: 700px;
      	margin: 0 auto;
    }
    
    .loadingBg{
     	z-index:2;
     	position: absolute;
	    bottom:10px;
	    width:100%;
	    height:100%;
	    max-width:700px;
	   margin: 0 auto;
    }
    
    .loadingContainer{
     width:100%;
	    height:100%;
      display:-moz-box; display:-webkit-box; display:-o-box; display:box;
		-moz-box-pack:center; -webkit-box-pack:center; -o-box-pack:center; box-pack:center;
		-moz-box-align:center; -webkit-box-align:center; -o-box-align:center; box-align:center;
    }
    
    .loading{
    	height: 100px;
    	width: 250px;
    	height: 120px;
    	background-color: white;
    	-webkit-border-radius: 5px;
    	-moz-border-radius: 5px;
    	-o-border-radius: 5px;
    	border-radius: 5px;
    	  display:-moz-box; display:-webkit-box; display:-o-box; display:box;
		-moz-box-pack:center; -webkit-box-pack:center; -o-box-pack:center; box-pack:center;
		-moz-box-align:center; -webkit-box-align:center; -o-box-align:center; box-align:center;
    } 
    
    .loading div img{
    	float: left;
	}
    
    .loading div span{
    	margin:7px 0 0 2px;
    	color:rgb(57, 160, 156);
		margin-bottom: 5px;
		display: inline-block;	
	}
    